{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["next/core-web-vitals", "standard", "plugin:tailwindcss/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off"
    },
    "settings": {
    "tailwindcss": {
      "callees": ["cn"]
    },
    "next": {
      "rootDir": ["@"]
    }
  }
}
